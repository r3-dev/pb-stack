{
  "name": "r3-mvp-stack",
  "private": true,
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo",
    "dev": "dotenv -- turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui-solid:add": "pnpm --filter ui-solid ui:add",
    "preinstall": "git remote add template https://github.com/r3-dev/r3-mvp-stack",
    "postinstall": "go mod download",
    "r3mvp:update": "git fetch --all && git merge template/main --allow-unrelated-histories -m 'Update from template'"
  },
  "devDependencies": {
    "@vitest/ui": "^1.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "turbobuild-prune-go": "^1.0.8",
    "vite": "~5.0.0",
    "vitest": "^1.3.1"
  },
  "packageManager": "pnpm@8.15.4"
}
